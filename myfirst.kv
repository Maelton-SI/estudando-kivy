MainInterface:

<MainInterface>:
    cols: 4
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.texto_instrutivo
            text_size: self.width, None
            halign: "center"
        Switch:
            #A propriedade "active" de um widget switch pode possuir os valores booleanos:
            #True (caso ativado) e False (Caso desativado)
            on_active: root.on_off(self)
        Label:
            text: root.texto_explicativo
            text_size: self.width, None
            halign: "center"
    Button:
        text: "Some uma unidade!"
        on_press: root.soma_unidade()
        disabled: root.soma_button_disabled
    Label:
        text: root.unidades
        font_name: "fonts/Lcd.ttf"
        font_size: "125dp"
        color: root.cor_das_unidades
    Button:
        text: "Subtraia uma unidade!"
        on_press: root.subtrai_unidade()
        disabled: root.sub_button_disabled
